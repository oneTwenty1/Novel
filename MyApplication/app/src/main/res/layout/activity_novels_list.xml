<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context="com.example.winter.myapplication.NovelsListActivity">

    <Button
        android:id="@+id/frame_title_bar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:textSize="25dp"
        android:gravity="center"
        android:background="#f44"
        android:text="@string/all_novels_title"
        android:layout_weight="0.1"/>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:background="#eee"
        android:layout_weight="0.8"
        >

        <GridView
            android:id="@+id/gview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:numColumns="auto_fit"
            android:columnWidth="80dp"
            android:stretchMode="columnWidth"
            android:verticalSpacing="10dp"
            android:horizontalSpacing="10dp"
            ></GridView>
    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="0.1"
    >

    <Button
        android:id="@+id/one"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:text="@string/search"
        android:layout_weight="0.1"
        android:onClick="OpenNew"/>
    <Button
        android:id="@+id/two"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/one"
        android:text="@string/thought"
        android:layout_weight="0.1"
        android:onClick="OpenNew"/>
    <Button

        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:text="@string/me"
        android:layout_toRightOf="@+id/two"
        android:layout_weight="0.1"
        android:onClick="OpenNew"/>
</LinearLayout>
</LinearLayout>
